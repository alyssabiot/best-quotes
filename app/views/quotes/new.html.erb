<h1>Submit your best quote of the day !</h1>

<%= form_with model: @quote do |form| %>
  <div class='form-group'>
    <%= form.label :content %><br>
    <%= form.text_area :content, class: 'form-control' %>
    <% @quote.errors.full_messages_for(:content).each do |message| %>
      <div class='error'><%= message %></div>
    <% end %>
  </div>

  <div class='form-group'>
    <%= form.label :author %><br>
    <%= form.text_field :author, class: 'form-control' %>
    <% @quote.errors.full_messages_for(:author).each do |message| %>
      <div class='error'><%= message %></div>
    <% end %>
  </div>

  <div class='form-group'>
    <%= form.label :date %><br>
    <%= form.date_field :date, class: 'form-control' %>
    <% @quote.errors.full_messages_for(:date).each do |message| %>
      <div class='error'><%= message %></div>
    <% end %>
  </div>

  <div class='text-right'>
    <%= form.submit 'Submit quote', class: 'btn btn-success' %>
  </div>
<% end %>
