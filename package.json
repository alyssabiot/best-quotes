{
  "name": "best-quotes",
  "private": true,
  "dependencies": {
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-plugin-macros": "^3.1.0",
    "esbuild": "^0.25.9",
    "nodemon": "^3.1.10",
    "sass": "^1.90.0"
  },
  "scripts": {
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "sass --load-path=node_modules ./app/javascript/stylesheets/application.scss ./app/assets/builds/application.css",
    "build": "yarn build:js && yarn build:css",
    "start": "bin/dev",
    "watch:css": "nodemon --watch app/javascript/stylesheets --ext scss --exec \"yarn run build:css\""
  }
}
